{
  "name": "root",
  "private": true,
  "version": "0.0.0",
  "description": "Indielayer UI Components with Tailwind CSS build for Vue 3",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap --force-local",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cd packages/ui && yarn dev",
    "docs": "cd packages/docs && yarn dev",
    "build": "cd packages/ui && yarn build-prod",
    "build:docs": "yarn build && cd packages/docs && yarn build",
    "release": "lerna publish",
    "release:alpha": "lerna publish prerelease --preid alpha --dist-tag alpha",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/indielayer/ui.git"
  },
  "author": "Jo√£o Teixeira (https://indielayer.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/indielayer/ui/issues"
  },
  "homepage": "https://github.com/indielayer/ui#readme",
  "dependencies": {
    "@indielayer/eslint-config-vue": "^3.0.0",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/eslint-config-typescript": "^10.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.6.0",
    "eslint-plugin-cypress": "^2.12.1",
    "lerna": "^4.0.0",
    "typescript": "^4.2.4"
  }
}
